			</NavigationPage>
		</TabViewItem.Content>
	</TabViewItem>

	<!-- Stats Tab -->
	<TabViewItem>
		<TabViewItem.Icon>
			<FontIcon Glyph="&#xE133;" />
			<!-- Exempelikon, ändra som du vill -->
		</TabViewItem.Icon>
		<TabViewItem.Content>
			<NavigationPage>
				<x:Arguments>
					<local:StatsPage />
